    <style>
      /* Additional CSS for button customization */
      .btn-instagram {
        background-color: #405de6;
        color: #ffffff;
      }

      .btn-instagram:hover {
        background-color: #1a2980;
        color: #ffffff;
      }

      .btn-danger {
        /* Customize the delete button color if needed */
        background-color: #ff5252;
        color: #ffffff;
      }

      .btn-danger:hover {
        background-color: #c62828;
        color: #ffffff;
      }

      /* Custom styles for the layout */
      body {
        display: flex;
        height: 100vh;
        margin: 0;
      }

      .sidebar {
        width: 250px; /* Adjust the width as needed */
        background-color: #f8f9fa;
        padding: 5px 0;
      }

      .a-items {
        font-size: 17px;
        width: 100%;
        display: block;
        padding: 15px;
        color: #000000c9; /* Set initial text color */
        text-decoration: none;
        transition: backround-color 0.5s, color 0.2s;
        border-radius: 10px;
        margin-bottom: 5px;
      }
      .a-items i p{
        font-size: 17px;
        width: 100%;
        display: block;
        padding: 15px;
        color: #000000c9; /* Set initial text color */
        text-decoration: none;
        transition: backround-color 0.5s, color 0.2s;
        border-radius: 10px;
        margin-bottom: 5px;
      }
    
      .a-items i {
        margin-right: 10px;
        font-size: 20px;
      }
      .a-items p{
        margin-right: 10px;
        position: relative;
        display: inline;
      }

      .a-items:hover {
        background-color: rgba(
          39,
          39,
          39,
          0.1
        ); /* Semi-transparent dark background on hover */
        font-size: 20px;
        text-decoration: none;
        color: #000000;
        border-radius: 10px;
      }

      .main-content {
        flex: 1;
        padding: 20px;
      }

      .navbar-content {
        width: 80%;
      }
      .navbar-1 {
        justify-content: space-between;
        align-items: center;
        margin: 0 auto;
      }
      .logo{
        font-family: 'Times new roman', sans-serif;
        font-size: 25px;
        font-weight: 2.4rem;
        color: #000000;
        text-decoration: none;
        
        padding: 0 0 0 23%;
      }
      .logo:hover{
        font-family: 'Times new roman', sans-serif;
        font-size: 25px;
        font-weight: 2.4rem;
        color: #000000;
        text-decoration: none;
        
        padding: 0 10px 0 23%;
      }
      .sidebar {
  width: 15%; /* Adjust the width as needed */
  background-color: #f8f9fa;
  padding: 5px 0;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  z-index: 1000;
  overflow-y: auto;
}
@media (max-width: 1044px) {
  .sidebar {
    width: 70px; /* Adjust as needed for smaller screens */
  }
  .logo i{
    font-size: 15px;
    padding-left: 0;
  }
  .logo{
    padding: 0 0 0 4px;
  }
  .sidebar .a-items p{
    padding-top:0 ;
    color: #a45f5fc9;
    display: none;

  }
  
  .container {
     padding-left: 100px;/* Adjust as needed for smaller screens */
  }
}

